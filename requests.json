// TICKET
//------------------------------------------------
// url: api/v1/user/ticket/{client}
// type: POST
// errors: 1,2,4,5,6,7
//////////////////////////////////////////////////

/* request */
{
	"email": "something@something.com",
	"ticket": "ticket number"
}

/* response */
{
	"status": {
		"code": 0,
		"name": "successfull request"
	},
	"content": {
		"email": "something@something.com",
		"ticket": "ticket number",
		"is_user": 0 // 0 - no, he/she is not, 1 - yes, he/she is
	}
}






